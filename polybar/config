[colors]
background = ${xrdb:background:#222}
softbackground = #32302f
foreground = ${xrdb:foreground:#222}
black = ${xrdb:color0}
darkgrey = ${xrdb:color8}
darkred = ${xrdb:color1}
red = ${xrdb:color9}
darkgreen = ${xrdb:color2}
green = ${xrdb:color10}
darkyellow = ${xrdb:color3}
yellow = ${xrdb:color11}
darkblue = ${xrdb:color4}
blue = ${xrdb:color12}
darkmagenta = ${xrdb:color5}
magenta = ${xrdb:color13}
darkcyan = ${xrdb:color6}
cyan = ${xrdb:color14}
lightgrey = ${xrdb:color7}
white = ${xrdb:color15}

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 40 
;offset-x = 15%
;offset-y = 1%
radius = 5
fixed-center = true
;override-redirect = true
bottom = false 
dpi = 120

background = ${colors.background}
foreground = ${colors.foreground}

border-left-size = 20
border-top-size = 5
border-right-size = 20
border-bottom-size = 0
border-color = #00000000

tray-position = right
tray-detached = false

font-0 = Consolas for Powerline:size=11;2
font-1 = Font Awesome 5 Free:pixelsize=10;3
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=10;3
font-3 = Font Awesome 5 Brands:pixelsize=10;3

modules-left = i3
modules-center = date  
modules-right = xkeyboard pulseaudio backlight wlan battery temperature clock 

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-indicator> <label-layout>

label-layout = %layout% %{F#d3869b}%{F-}
label-layout-padding-right = 2
label-indicator = %name%
label-indicator-foreground = ${colors.red}
label-indicator-font = 1


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;

; Only show workspaces on the same output as the bar
;pin-workspaces = true

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.darkgreen}
label-focused-padding = 2
label-focused-spacing = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-padding = ${self.label-focused-padding}
label-visible-foreground = ${colors.darkyellow}


; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.red}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
; label-separator = |


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 2.0

format-connected = <label-connected> <ramp-signal>
label-connected = %essid%
ramp-signal-padding-right = 2

format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected

ramp-signal-0 = %{F#fb4935}%{F-}
ramp-signal-1 = %{F#fabd2f}%{F-}
ramp-signal-2 = %{F#b8bb26}%{F-}


[module/clock]
type = internal/date
interval = 5

time = "%H:%M"
format = <label> 
format-padding = 2

label = %time% %{F#689d6a}%{F-}
label-font = 1
label-foreground = ${colors.foreground}

[module/date]
type = internal/date

date = "%a %b %d"

[module/pulseaudio]
type = internal/pulseaudio

format-volume =  <label-volume>

label-volume = %percentage%% %{F#83a598}%{F-}
label-volume-font = 2
label-volume-padding-right = 2

label-muted = muted
label-muted-foreground = ${colors.red}
label-muted-padding-right = 2


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
poll-interval = 5

format-charging = <label-charging> %{F#d79921}%{F-}

format-discharging = <label-discharging> <ramp-capacity>

format-full = <label-full> <ramp-capacity>

ramp-capacity-0 = %{F#fb4934}%{F-}
ramp-capacity-1 = %{F#d79921}%{F-}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.cyan}
ramp-font = 1

label-charging = %percentage%% 
label-charging-font = 1

label-percentage = %percentage%%
label-percentage-font = 1

label-discharging = %percentage%%
label-discharging-font = 1

[module/backlight]
type = internal/xbacklight

format = <label>

label = %percentage%% %{F#d79921}%{F-}
label-padding-right = 2


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

