# Aliases

# Pacman
alias update="yay -Syu"
alias pacman="sudo pacman"

# Editors
alias vim="nvim"
alias vi="nvim"

# Convenience
alias la="ls -al --color=auto"
alias ls="ls --color=auto"

# Python
alias workoff="deactive; cd"
alias py="python"

# Docker
alias dcd="docker-compose -f docker-compose.dev.yml"

# Cd-root
alias cdr="cd-gitroot"

# reload polybar
alias repoly="~/.dotfiles/polybar/launch.sh"

# Setup screens
alias screens="~/.dotfiles/scripts/dual-screen.sh"

# Code
#alias code="code --extensions-dir ~/.vscode/extensions"

# Nix
alias nixd='. /home/lukas/.nix-profile/etc/profile.d/nix.sh'
