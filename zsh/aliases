# Aliases

# Pacman
alias update="yay -Syu"
alias pacman="sudo pacman"

# Editors
alias vim="nvim"
alias vi="nvim"

# Convenience
alias la="ls -al --color=auto"
alias ls="ls --color=auto"

# Python
alias workoff="deactive; cd"
alias py="python"

# Docker
alias dcd="docker-compose -f docker-compose.dev.yml"
