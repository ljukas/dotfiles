# Aliases

# Pacman
alias pacman="sudo pacman"

# Editors
alias vim="nvim"
alias vi="nvim"

# Convenience
alias la="ls -al --color=auto"
alias ls="ls --color=auto"

# Python
alias workoff="deactive; cd"
alias py="python"

# Docker
alias dcd="docker-compose -f docker-compose.dev.yml"
alias dkc="docker-compose"
alias dkcu="docker-compose up"
alias dkcd="docker-compose down"
alias dkcl="docker-compose logs"
alias dkclf="docker-compose logs -f"
alias dkce="docker-compose exec"

# Git
alias gitc="git commit"
alias gitcm="gitc -m"
alias gitp="git push"
alias gita="git add"
alias gits="git status"

# Cd-root
alias cdr="cd-gitroot"

# reload polybar
alias repoly="~/.dotfiles/polybar/launch.sh"

# Setup screens
alias screens="~/.dotfiles/scripts/dual-screen.sh"

# Nix
alias nixd="./home/lukas/.nix-profile/etc/profile.d/nix.sh"

# Spotify - Correct aspect ratio
alias spotify="spotify --force-device-scale-factor=1.3"

# Setup screens and polybar
alias startday="autorandr -c && repoly"
